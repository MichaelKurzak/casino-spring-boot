<thlogic>
    <attr sel="#headId" th:replace="~{fragments/head :: headFragment}"/>
    <attr sel="#footerId" th:replace="~{fragments/footer :: footerFragment}"/>
    <attr sel="#headerId" th:replace="~{fragments/header :: headerFragment}"/>
    <attr sel="#updateInformationForm" th:object="${casinoUser}"/>
    <attr sel="#firstname" th:field="*{firstname}"/>
    <attr sel="#secondname" th:field="*{secondname}"/>
    <attr sel="#dateOfBirth" th:field="*{birthdate}"/>
    <attr sel="#country" th:field="*{country}"/>
    <attr sel="#confirmationMessageParagraph" th:if="${confirmationMessage!=null}"/>
    <attr sel="#confirmationMessageS" th:text="${confirmationMessage}"/>
</thlogic>